    "doctrine/orm": "2.4.*",
    "symfony/yaml": "2.*",
    "phpmd/phpmd": "2.2.1",
    "sebastian/phpcpd": "2.0.1",
    "phploc/phploc": "*",
    "fabpot/goutte": "v2.0.3"
  },
  "autoload": {
    "psr-0": {
      "": "src/"
    }
