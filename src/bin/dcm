#!/usr/bin/env php
<?php
// I don't know where I will be called from -
// this script may be placed in the 'vendor/bin' directory when distributed.
// or it's in the src/bin or root of the project during development or
// stand-alone use.

$loaded = false;
// Autoload location is tricky to find.
// I'm puzzled there is not a tidier catch-all fix convention.
$autoloads = array(
  'run from src in a stand-alone project'           => __DIR__ . '/../../autoload.php',
  'run from bin in a distributed project, filecopy' => __DIR__ . '/../../vendor/autoload.php',
  'run from bin in a distributed project, symlink'  => __DIR__ . '/../../../../autoload.php', 
);

foreach ($autoloads as $file) {
  if (file_exists($file)) {
    require $file;
    $loaded = true;
    break;
  }
}
if (!$loaded) {
  print_r($autoloads);
  die(
    'Cannot find autoload.php nearby' . PHP_EOL .
    'You need to set up the project dependencies using the following commands:' . PHP_EOL .
    'wget http://getcomposer.org/composer.phar' . PHP_EOL .
    'php composer.phar install' . PHP_EOL
  );
}

$options['database'] = array(
  'driver' => 'pdo_sqlite',
  'path' => __DIR__ . '/../../db.sqlite',
);

$application = new DrupalCodeMetrics\Application('DrupalCodeMetrics console', '0.0-alpha');
$application->options = $options;
$application->run();

